<header class="bg-gray-800 p-6 mb-8">
    <div class="container mx-auto flex justify-between items-center">

        <a href="/dashboard" class="text-white font-bold text-lg focus:outline-none focus:ring-0 focus:ring-offset-0">
            <h1 class="text-3xl font-bold text-white">QR-MATE</h1>
        </a>
        <a href="/dashboard/settings"
            class=" font-bold  text-white py-2 px-4 rounded-md  focus:outline-none focus:ring-0 focus:ring-offset-0">
            <i class="fa-solid fa-gear text-2xl"></i>
        </a>
    </div>
</header>
<!-- Main Content -->

<div class="container mx-auto p-4 mt-6">
    <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">

        <form action="/settings" method="POST">
            <!-- Maximum Allowed Time for Expiry Calculation -->
            <div class="mb-6">
                <label for="expiryTime" class="block text-lg font-medium text-gray-700">Maximum Allowed Expiry Time (in
                    days)</label>
                <input type="number" id="expiryTime" name="expiryTime"
                    class="mt-2 p-3 border border-gray-300 rounded-md w-full" required />
            </div>

            <!-- Voucher Dimensions (Width and Height) -->
            <div class="mb-6">
                <label for="width" class="block text-lg font-medium text-gray-700">Voucher Width (mm)</label>
                <input type="number" id="width" name="width" class="mt-2 p-3 border border-gray-300 rounded-md w-full"
                    required />
            </div>

            <div class="mb-6">
                <label for="height" class="block text-lg font-medium text-gray-700">Voucher Height (mm)</label>
                <input type="number" id="height" name="height" class="mt-2 p-3 border border-gray-300 rounded-md w-full"
                    required />
            </div>

            <!-- Font Sizes (Title and Normal Text) -->
            <div class="mb-6">
                <label for="titleFontSize" class="block text-lg font-medium text-gray-700">Title Font Size (px)</label>
                <input type="number" id="titleFontSize" name="titleFontSize"
                    class="mt-2 p-3 border border-gray-300 rounded-md w-full" required />
            </div>

            <div class="mb-6">
                <label for="textFontSize" class="block text-lg font-medium text-gray-700">Normal Text Font Size
                    (px)</label>
                <input type="number" id="textFontSize" name="textFontSize"
                    class="mt-2 p-3 border border-gray-300 rounded-md w-full" required />
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit"
                    class="bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 focus:outline-none">
                    Save 
                </button>
            </div>
        </form>
    </div>
</div>