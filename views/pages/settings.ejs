<header class="bg-gray-800 p-6 mb-8">
  <div class="container mx-auto flex justify-between items-center">
    <a
      href="/dashboard"
      class="text-white font-bold text-lg focus:outline-none focus:ring-0 focus:ring-offset-0"
    >
      <h1 class="text-3xl font-bold text-white">QR-MATE</h1>
    </a>
    <a
      href="/dashboard/settings"
      class="font-bold text-white py-2 px-4 rounded-md focus:outline-none focus:ring-0 focus:ring-offset-0"
    >
      <i class="fa-solid fa-gear text-2xl"></i>
    </a>
  </div>
</header>

<!-- Main Content -->
<div class="container mx-auto p-4 mt-6">
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <%- include('../partials/error') %> <%- include('../partials/success') %>
    <form id="settingsForm">
      <!-- Title  -->

      <div class="mb-6">
        <label for="expiryTime" class="block text-lg font-medium text-gray-700">
          Voucher Title
        </label>
        <input
          type="text"
          id="title"
          value="<%= settings.title %>"
          name="title"
          class="mt-2 p-3 border border-gray-300 rounded-md w-full"
        />
        <p id="titleError" class="text-red-500 text-sm mt-2"></p>
      </div>
      <!-- Expiry Time -->
      <div class="mb-6">
        <label for="expiryTime" class="block text-lg font-medium text-gray-700">
          Maximum Allowed Expiry Time (in days)
        </label>
        <input
          type="number"
          value="<%= settings.expiry_days %>"
          id="expiryTime"
          name="expiryTime"
          class="mt-2 p-3 border border-gray-300 rounded-md w-full"
        />
        <p id="expiryTimeError" class="text-red-500 text-sm mt-2"></p>
      </div>

      <!-- Voucher Width -->
      <div class="mb-6">
        <label for="width" class="block text-lg font-medium text-gray-700"
          >Voucher Width (mm)</label
        >
        <input
          type="number"
          id="width"
          value="<%= settings.width_mm %>"
          name="width"
          class="mt-2 p-3 border border-gray-300 rounded-md w-full"
        />
        <p id="widthError" class="text-red-500 text-sm mt-2"></p>
      </div>

      <!-- Voucher Height -->
      <div class="mb-6">
        <label for="height" class="block text-lg font-medium text-gray-700"
          >Voucher Height (mm)</label
        >
        <input
          type="number"
          id="height"
          value="<%= settings.height_mm %>"
          name="height"
          class="mt-2 p-3 border border-gray-300 rounded-md w-full"
        />
        <p id="heightError" class="text-red-500 text-sm mt-2"></p>
      </div>

      <!-- Title Font Size -->
      <div class="mb-6">
        <label
          for="titleFontSize"
          class="block text-lg font-medium text-gray-700"
          >Title Font Size (px)</label
        >
        <input
          type="number"
          id="titleFontSize"
          value="<%= settings.title_font %>"
          name="titleFontSize"
          class="mt-2 p-3 border border-gray-300 rounded-md w-full"
        />
        <p id="titleFontSizeError" class="text-red-500 text-sm mt-2"></p>
      </div>

      <!-- Text Font Size -->
      <div class="mb-6">
        <label
          for="textFontSize"
          class="block text-lg font-medium text-gray-700"
          >Normal Text Font Size (px)</label
        >
        <input
          type="number"
          id="textFontSize"
          value="<%= settings.text_font %>"
          name="textFontSize"
          class="mt-2 p-3 border border-gray-300 rounded-md w-full"
        />
        <p id="textFontSizeError" class="text-red-500 text-sm mt-2"></p>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 focus:outline-none"
        >
          Save
        </button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/javascripts/validation/voucher.js"></script>
